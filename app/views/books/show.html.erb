<h2><%= @book.title %></h2>
<h2><%= @book.author %></h2>
<p><%= @book.description %></p>

<%= link_to "Edit", edit_book_path(@book), :class => 'btn btn-default' %>
<%= link_to "Delete", book_path(@book),
                        method: :delete,
                        data: {confirm: 'Are you sure?'},
                        :class => 'btn btn-danger'%>

<hr>

<h3>Comments</h3>

<% @book.comments.each do |comment|%>
    <div class="well">
        <p><strong><%= comment.username %></strong>: <%= comment.reviews %>
        <%= link_to '[*]', [comment.book, comment],
                            method: :delete,
                            data: {confirm: 'Are you sure?' } %></p>
    </div>
<% end %>

<h3>Add Comment</h3>
<%= form_for([@book, @book.comments.build]) do |f|%>
<p>
        <%= f.label :username %> <br>
        <%= f.text_field(:username, {:class => 'form-control'}) %> 
    </p>
    <p>
        <%= f.label :reviews %> <br>
        <%= f.text_area(:reviews, {:class => 'form-control'}) %>
    </p>
    <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
    </p>
<% end %>
